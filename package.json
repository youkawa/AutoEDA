{
  "name": "@autoeda/monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev:web": "npm run -w @autoeda/web dev",
    "build:web": "npm run -w @autoeda/web build",
    "lint:web": "npm run -w @autoeda/web lint",
    "typecheck:web": "npm run -w @autoeda/web typecheck",
    "test:web": "npm run -w @autoeda/web test",
    "test:e2e": "playwright test",
    "schema:dump:openapi": "python3 apps/api/scripts/dump_openapi.py",
    "schema:validate": "tsx scripts/validate_schemas.ts",
    "check:slo": "python3 apps/api/scripts/check_slo.py",
    "check:rag": "python3 apps/api/scripts/check_rag.py"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "husky": "^9.1.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "zod-to-json-schema": "^3.23.5",
    "tsx": "^4.15.7"
  }
}
